<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_search">

    <fragment
        android:id="@+id/nav_search"
        android:name="com.example.a6degrees.ui.search.SearchFragment"
        android:label="@string/menu_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/nav_history"
        android:name="com.example.a6degrees.ui.history.HistoryFragment"
        android:label="@string/menu_history"
        tools:layout="@layout/fragment_history" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.a6degrees.ui.settings.SettingsFragment"
        android:label="@string/menu_settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/nav_results"
        android:name="com.example.a6degrees.ui.results.ResultsFragment"
        android:label="@string/results_title"
        tools:layout="@layout/fragment_results" />

    <fragment
        android:id="@+id/nav_api_settings"
        android:name="com.example.a6degrees.ui.settings.ApiSettingsFragment"
        android:label="@string/api_settings_title"
        tools:layout="@layout/fragment_api_settings" />
</navigation>